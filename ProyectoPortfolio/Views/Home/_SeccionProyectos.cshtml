@model IEnumerable<ProyectDTO>

@if (Model is not null)
{
    //automaticamente se pasan los datos a la view, pero declarar el modelo
    //que se utiliza hace que se defina una clase a utilizar, y evitar pasar un dato
    //que no corresponde
    //pero esto limita la flexibilidad para ser reutilizada, entonces mejor declaro el
    //atributo que quiero que me llegue
    //Ahora el IEnumerable es el Model
    <div class="text-center" style="padding-top: 6rem;">
        <h1>Mis trabajos recientes</h1>
        <p>Aqui puedes ver mis trabajos mas recientes</p>
    </div>

    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var proyecto in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@proyecto.ImagenURL" class="card-img-top" alt="imagen de un proyecto" />
                        <div class="card-body">
                            <h5 class="card-title">@proyecto.Titulo</h5>
                            <p class="card-text">@proyecto.Descripcion</p>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" href="@proyecto.Link" target="_blank" rel="noreferrer noopener">Visitar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}